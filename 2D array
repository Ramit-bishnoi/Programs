#include <stdio.h>

int main()
{
    int m , n , i , j ;
    printf("enter no. of rows : " );
    scanf("%d", &m) ;
    printf("enter no. of column : ");
    scanf("%d", &n);
    int mat[m][n];
    int row ;
    for(i = 0 ; i < m ; i ++)
    {
        for(j = 0 ; j < n  ; j ++ )
        {
            printf("enter (%d,%d) element : " , i+1 , j+1);
            scanf("%d" , &mat[i][j]) ;
        }
        
    }
    for(i = 0 ; i <m ; i ++)
    {
        row = 0;
        for(j = 0 ; j < n  ; j ++ )
        {

            row += mat[i][j];
        }
        printf("sum of row %d = %d \n" , i+1 , row );
        
    }
    
}
