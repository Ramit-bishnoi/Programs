//pick from both side and find max sum 
#include <stdio.h>


int main()
{
    int a = 0 , b = 0 , c = 0 , d = 0 ;
    int A[] = {3 , 4 , 5 , 7 , 2 , 7 , 9 , 4 , 5  , 8 };
    int n = 10 ;
    int B = 4 ;
    for(int i = 0 ;  i<B ; i++ )
    {
        a = a + A[i];
    }
    printf("a = %d\n" , a);
    
    
    for(int i = 0 ; i < B-1 ; i++)
    {
        b = b + A[i] ;
        
    }
    b = b+ A[n-1];
    printf("b = %d\n" , b);
    
    for(int i = n-1 ; i > n-1-B ; i--)
    {
        c = c + A[i];
    
    }
    printf("c = %d\n" , c);
    
    for(int i = n-1 ; i > n-B ; i--)
    {
        d = d + A[i];
    }
    d = d + A[0];
    printf("d = %d\n" , d );
    
    if(a < b)
    {
        if(b < c)
        {
            if(c < d)
            {
                printf("max sum = %d" , d);
            }
            else
            {
                printf("max sum = %d" ,c);
            }
            
        }
        else if (b < d)
        {
            printf("max sum = %d" , d);
        }
        else
        {
            printf("max sum = %d" , b);
        }
        
    }
    else if(a < c)
    {
        if(c < d)
        {
            printf("max sum = %d" , d);
        }
        else
        {
            printf("max sum = %d" , c);
        }    
        
    }
    else if(a < d)
    {
        printf("max sum = %d" , d);
    }
    else
    {
        printf("max sum = %d" , a);
    }
    
    
}
