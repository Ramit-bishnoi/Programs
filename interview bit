// min steps in infinte grid 
int coverPoints(int* A, int n1, int* B, int n2) {
    int n = n1 , a=0 , b=0 , count = 0, i=0;
    for(i = 0 ; i< n-1 ; i++)
    {
        a = abs(A[i] - A[i+1]);
        b = abs(B[i] - B[i+1]);
    if (a < b )
    {
        //printf("minn.  steps are %d\n",b);
        count= count + b;
    }                                      
    else
    {   
        //printf("minx steps are %d\n",a);
        count = count + a;

    }
    
    }
    //printf("min = %d" ,count );
    return count;

}
